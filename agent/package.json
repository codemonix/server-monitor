{
  "name": "srm-agent",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "srm-agent": "src/index.js"
  },
  "pkg": {
    "esm": true,
    "assets": [
      "src/version.txt",
      "node_modules/systeminformation/**/*"
    ],
    "targets": [
      "node20-linux-x64",
      "node20-win-x64"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "start": "node --enable-source-maps src/index.js",
    "dev": "NODE_ENV=development node --enable-source-maps src/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "pkg ."
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "jsonwebtoken": "^9.0.2",
    "systeminformation": "^5.27.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "vitest": "^4.0.17"
  }
}
