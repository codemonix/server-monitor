{
  "name": "srm-agent",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "srm-agent": "src/index.js"
  },
  "scripts": {
    "start": "bun src/index.js",
    "dev": "bun --watch src/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build:linux": "bun build ./src/index.js --compile --outfile bin/srm-agent --target bun-linux-x64",
    "build:win": "bun build ./src/index.js --compile --outfile bin/srm-agent.exe --target bun-windows-x64"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "jsonwebtoken": "^9.0.2",
    "systeminformation": "^5.27.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "vitest": "^4.0.17"
  }
}
